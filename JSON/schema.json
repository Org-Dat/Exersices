{
    "description": "validate the employee details it is correct or wrong",
    "type": "object",
    "title": "Employee Details",
    "properties": {
        
        "name": {
            "minLength": 3,
            "type": "string",
            "maxLength": 255
        },
        "company": {
            "pattern": "^zoho$",
            "type": "string"
        },
        "phone_number": {
            "pattern": "^[6-9][0-9]{9 , 20}$",
            "type": "array"
        },
        "salary": {
            "maximum": 20000000,
            "type": "integer",
            "minimum": 2000
        },
        "experience": {
            "maximum": 39,
            "type": "boolean",
            "minimum": 0
        },
        "age": {
            "maximum": 58,
            "type": "integer",
            "minimum": 18
        },
        "email": {
            "format": "email"
        }
    },
    "required": [
        "name",
        "salary",
        "age",
        "field",
        "company",
        "email"
    ]
}